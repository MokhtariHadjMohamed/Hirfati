<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminUserAccountAdd">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textColor01"
            android:minHeight="1000dp"
            tools:context=".HomePageActivity">

            <View
                android:id="@+id/view"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="-350dp"
                android:background="@drawable/rectangle_01"
                android:maxWidth="1000dp"
                android:maxHeight="1000dp"
                android:rotation="-31"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_back_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/uploadImageAdminUserAccountAdd"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <ImageView
                    android:id="@+id/userImageAdminUserAccountAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:backgroundTint="#00000000"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/Color01_50p"
                        android:padding="20dp"
                        android:src="@drawable/baseline_cloud_upload_24" />
                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/Color01"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uploadImageAdminUserAccountAdd">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/errorAdminUserAccountAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/tajawal_bold"
                        android:textColor="@color/Error"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/nameAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/tajawal_regular"
                        android:hint="الإسم"
                        android:inputType="text"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/errorAdminUserAccountAdd" />

                    <EditText
                        android:id="@+id/famileNameAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/tajawal_regular"
                        android:hint="اللقب"
                        android:inputType="text"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameAdminUserAccountAdd" />

                    <EditText
                        android:id="@+id/birthdayAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:editable="false"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="right|center"
                        android:hint="تاريخ الميلاد"
                        android:inputType="text"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/famileNameAdminUserAccountAdd" />

                    <EditText
                        android:id="@+id/addressAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="start|top"
                        android:hint="عنوان سكن"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:scrollbars="vertical"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/birthdayAdminUserAccountAdd" />

                    <Spinner
                        android:id="@+id/statesAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:fontFamily="@font/tajawal_regular"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addressAdminUserAccountAdd" />

                    <Spinner
                        android:id="@+id/cityAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:fontFamily="@font/tajawal_regular"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/statesAdminUserAccountAdd" />

                    <EditText
                        android:id="@+id/emailAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/tajawal_regular"
                        android:hint="بريد الإلكتروني"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cityAdminUserAccountAdd" />

                    <EditText
                        android:id="@+id/passwordAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="end"
                        android:hint="كلمة السر"
                        android:inputType="textPassword"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/emailAdminUserAccountAdd" />

                    <EditText
                        android:id="@+id/password02AdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="end"
                        android:hint="تأكيد كلمة السر"
                        android:inputType="textPassword"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/passwordAdminUserAccountAdd" />

                    <EditText
                        android:id="@+id/phoneAdminUserAccountAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="right"
                        android:hint="رقم الهاتف"
                        android:inputType="phone"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password02AdminUserAccountAdd" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/submitAdminUserAccountAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/button_shape"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="إضافة"
                        android:textColor="@color/Color01"
                        android:textColorHint="@color/Color01"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/phoneAdminUserAccountAdd" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hirfati" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimaryDark">#00000000</item>
         <item name="statusBarScrim">@color/Color01</item>
    </style>

    <style name="Theme.Hirfati" parent="Base.Theme.Hirfati" />
    <style name="SliderActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in_left</item>
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">20sp</item>
        <item name="android:editTextColor">@color/Color01</item>
        <item name="android:textColorHint">@color/Color01</item>
        <item name="android:icon">@color/Color01</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/textColor01</item>
    </style>
</resources>